{
  "scopeName": "source.liberty",
  "name": "Synopsys Liberty",

  "fileTypes": ["lib"],

  "foldingStartMarker": "\\{\\s*$",
  "foldingStopMarker": "^\\s*\\}",

  "patterns": [
    { "include": "#comments" },
    { "include": "#groups" },
    { "include": "#attributes" },
    { "include": "#numbers" },
    { "include": "#strings" },
    { "include": "#punctuation" }
  ],

  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.liberty",
          "begin": "/\\*",
          "end": "\\*/",
          "patterns": [
            {
              "match": "\\b(TODO|FIXME|XXX)\\b",
              "name": "keyword.other.todo.liberty"
            }
          ]
        }
      ]
    },

    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.liberty",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "match": "\\\\.",
              "name": "constant.character.escape.liberty"
            }
          ]
        }
      ]
    },

    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.liberty",
          "match": "\\b[+-]?(?:\\d+\\.\\d*|\\d*\\.\\d+|\\d+)(?:[eE][+-]?\\d+)?\\b"
        }
      ]
    },

    "groups": {
      "patterns": [
        {
          "name": "keyword.declaration.group.liberty",
          "match": "\\b(library|cell|pin|pg_pin|bus|bundle|timing|lu_table_template|power|leakage_power|internal_power|operating_conditions|wire_load|wire_load_selection|power_lut_template|constraint_lut_template|ff|latch|type|test_cell)\\b"
        }
      ]
    },

    "attributes": {
      "patterns": [
        {
          "name": "variable.parameter.attribute.liberty",
          "match": "\\b(area|direction|capacitance|rise_capacitance|fall_capacitance|max_transition|min_transition|related_pin|related_power_pin|related_ground_pin|function|timing_sense|timing_type|cell_leakage_power|voltage_unit|current_unit|time_unit|pulling_resistance_unit|leakage_power_unit|capacitive_load_unit|index_1|index_2|index_3|values|cell_rise|cell_fall|rise_transition|fall_transition|rise_propagation|fall_propagation)\\b"
        }
      ]
    },

    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.section.braces.begin.liberty",
          "match": "\\{"
        },
        {
          "name": "punctuation.section.braces.end.liberty",
          "match": "\\}"
        },
        {
          "name": "punctuation.section.parens.begin.liberty",
          "match": "\\("
        },
        {
          "name": "punctuation.section.parens.end.liberty",
          "match": "\\)"
        },
        {
          "name": "punctuation.section.brackets.begin.liberty",
          "match": "\\["
        },
        {
          "name": "punctuation.section.brackets.end.liberty",
          "match": "\\]"
        },
        {
          "name": "punctuation.separator.comma.liberty",
          "match": ","
        },
        {
          "name": "punctuation.separator.key-value.liberty",
          "match": ":"
        },
        {
          "name": "punctuation.terminator.statement.liberty",
          "match": ";"
        }
      ]
    }
  },

  "uuid": "e3c6b8a0-9f5a-4c89-9a11-5f4c5a0a0001"
}
