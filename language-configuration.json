{
  "comments": {
    "lineComment": "//",
    "blockComment": ["/*", "*/"]
  },

  "brackets": [
    ["{", "}"],
    ["(", ")"]
  ],

  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"" },
    { "open": "/*", "close": "*/" }
  ],

  "surroundingPairs": [
    ["{", "}"],
    ["(", ")"],
    ["\"", "\""]
  ],

  "folding": {
    "offSide": false,
    "markers": {
      "start": "^\\s*#region\\b",
      "end": "^\\s*#endregion\\b"
    }
  }
}
